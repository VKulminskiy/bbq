<h2>Изменить пароль</h2>
<div class="container">
  <div class="row">
    <div class="col-md-6 buffer-top">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group row">
          <%= f.label :password, class: "col-form-label", "Новый пароль" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> символов минимум)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, class: "col-form-label", "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Изменить пароль" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
